@{
	ViewData["Title"] = "MESSAGES";
}

<div class="form-group">
    <form action="#">
        <div class="form-group">
            <label for="userInput">Votre username :</label>
            <input class="form-control" type="text" name="userInput" id="userInput" />
        </div>
        <div class="form-group">
            <label for="messageInput">Votre message :</label>
            <input class="form-control" type="text" name="messageInput" id="messageInput" />
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-primary mb-2" name="messageSubmit" id="messageSubmit">Envoyer</button>
        </div>
    </form>

    <h3>Liste des messages :</h3>
    <div class="form-group">
        <ul class="list-group" id="messageList"></ul>
    </div>

</div>

@section scripts{
	<script src="~/lib/@@aspnet/signalr/dist/browser/signalr.js"></script>
	<script src="~/js/msgpack5.js"></script>
	<script src="~/js/signalr-protocol-msgpack.js"></script>
	<script src="~/js/Messenger.js"></script>
}